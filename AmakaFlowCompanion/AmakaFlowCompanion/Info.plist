<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDisplayName</key>
	<string>${PRODUCT_NAME}</string>
	<key>CFBundleIconName</key>
	<string>AppIcon</string>
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>gcm-ciq</string>
		<string>ciq-comm</string>
		<string>com-garmin-connect</string>
		<string>garminconnect</string>
		<string>ciqstore</string>
	</array>
	<key>NSCameraUsageDescription</key>
	<string>AmakaFlow uses the camera to scan QR codes for quick pairing with the web app.</string>
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>AmakaFlow uses Bluetooth to communicate with your Garmin watch during workouts, allowing you to control workouts and see real-time progress on your wrist.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>AmakaFlow uses the microphone to record your voice when creating workouts by describing them naturally.</string>
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>AmakaFlow uses on-device speech recognition to transcribe your voice into text for creating custom workouts.</string>
	<key>NSSupportsLiveActivities</key>
	<true/>
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>remote-notification</string>
		<string>bluetooth-central</string>
	</array>
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.myamaka.AmakaFlowCompanion</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>amakaflow</string>
			</array>
		</dict>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.myamaka.AmakaFlowCompanion.garmin</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>amakaflow-ciq</string>
			</array>
		</dict>
	</array>
</dict>
</plist>
